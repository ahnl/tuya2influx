# Tuya Cloud API Configuration
TUYA_CLIENT_ID=your_client_id_here
TUYA_CLIENT_SECRET=your_client_secret_here

# Tuya API Base URL (default: openapi.tuyaeu.com)
# Options: openapi.tuyaeu.com, openapi.tuyaus.com, openapi.tuyacn.com
TUYA_BASE_URL=openapi.tuyaeu.com

# Comma-separated list of device IDs to fetch
TUYA_DEVICE_IDS=device_id_1,device_id_2,device_id_3

# Database to write to: influxdb, questdb, or both (comma-separated)
WRITE_DB=influxdb

# InfluxDB (used when WRITE_DB includes influxdb)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_PORT=8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=default
INFLUXDB_BUCKET=tuya

# QuestDB (used when WRITE_DB includes questdb)
QUESTDB_URL=http://localhost:9000
QUESTDB_HTTP_PORT=9000
QUESTDB_ILP_PORT=9009

# Optional:
# INFLUXDB_INIT_USERNAME=admin
# INFLUXDB_INIT_PASSWORD=admin
